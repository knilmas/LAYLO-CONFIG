    <script>
        // Update the material texture based on selected finish
        function updateFinish() {
            const finish = document.getElementById("finish").value;
            const textureUrl = `https://raw.githubusercontent.com/username/LAYLO-CONFIG/main/textures/${finish}.jpg`;
            
            // Get the model viewer element
            const viewer = document.getElementById("product-viewer");

            // Ensure the texture is updated on the model
            viewer.setAttribute("src", viewer.getAttribute("src"));
            
            // Use the textureUrl as the source for the material (if model supports dynamic textures)
            viewer.querySelector("model-viewer").setAttribute("material", textureUrl);
        }

        // Initialize the configurator with default finish
        updateFinish();
    </script>

